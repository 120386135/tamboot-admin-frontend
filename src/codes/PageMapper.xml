<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tamboot.admin.system.mapper.SystemRoleMapper">
    <resultMap id="Model" type="com.tamboot.admin.system.model.SystemRoleModel"></resultMap>

    <select id="pageByCondition" resultMap="Model">
        select
            *
        from system_role
        <where>
            <if test="@com.tamboot.common.utils.StringUtils@isNotEmpty(condition.roleCodeLike)">
                role_code like concat('%', #{condition.roleCodeLike}, '%')
            </if>
            <if test="@com.tamboot.common.utils.StringUtils@isNotEmpty(condition.roleNameLike)">
                and role_name like concat('%', #{condition.roleNameLike}, '%')
            </if>
        </where>
    </select>
</mapper>